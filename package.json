{
  "name": "eslint-config",
  "description": "Collection of ESLint configs for use in Moser projects",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "run-p lint:*",
    "lint:root": "eslint .",
    "lint:core": "cd packages/core && eslint . --config index.js",
    "lint:react": "cd packages/react && eslint . --config index.js",
    "lint:vue": "cd packages/vue && eslint . --config index.js",
    "semantic-release": "multi-semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moser-inc/eslint-config.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/moser-inc/eslint-config/issues"
  },
  "homepage": "https://github.com/moser-inc/eslint-config#readme",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@qiwi/multi-semantic-release": "^7.1.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.3",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/eslint": "^8.56.11",
    "@types/node": "~20.12.14",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "eslint": "^8.57.0",
    "npm-run-all2": "^6.2.2",
    "prettier": "^3.3.3",
    "semantic-release": "^22.0.12",
    "standard-version": "^9.5.0"
  }
}
