{
  "name": "eslint-config",
  "version": "0.0.0-development",
  "description": "Collection of ESLint configs for use in Moser projects",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js",
    "semantic-release": "multi-semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moser-inc/eslint-config.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/moser-inc/eslint-config/issues"
  },
  "homepage": "https://github.com/moser-inc/eslint-config#readme",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@qiwi/multi-semantic-release": "^7.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.6",
    "@types/node": "~18.17.15",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "semantic-release": "^21.1.1"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "chore",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}
